<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/loginInPadding"
        android:paddingRight="@dimen/loginInPadding"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_mainlogo"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:padding="@dimen/loginLogo"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginSpace"
            android:paddingBottom="5sp"
            android:background="@drawable/green_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/colorDarkText"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"/>
            <!--  -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@color/colorText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/loginSpace"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="5sp"
            android:background="@drawable/green_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/colorDarkText"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"/>
            <!--  -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColor="@color/colorText"/>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/loginButton"
            android:text="Log in"
            android:textSize="15sp"
            android:textColor="@color/colorText"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/btn_bg"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="Register Account"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkText"
            android:fontFamily="sans-serif-light"
            android:background="@android:color/transparent"
            style="?android:borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>